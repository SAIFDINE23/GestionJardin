<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jardati_green"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Titre principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se connecter à Jardati"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="normal"
            android:gravity="start"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="serif" />







        <!-- Champ Adresse email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Adresse email"
                android:textColor="@color/white"
                android:textColorHint="@color/white_transparent"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@android:color/transparent" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Champ Mot de passe -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="@color/white"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Mot de passe"
                android:textColor="@color/white"
                android:textColorHint="@color/white_transparent"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@android:color/transparent" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Texte "Ou bien s'inscrire avec" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ou bien se connecter avec"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Boutons réseaux sociaux -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Bouton Facebook -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_facebook"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Facebook"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_facebook"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- Bouton Google -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_google"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Google"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_google"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                android:layout_marginStart="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Bouton S'inscrire principal -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register_main"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Se connecter"
            android:textColor="@color/jardati_green"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/white"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Lien de connexion -->
        <TextView
            android:id="@+id/tv_login_link"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Vous n'avez pas un compte? S'inscrire'"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</ScrollView>