<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_jardin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Image du jardin (optionnelle) -->
        <ImageView
            android:id="@+id/iv_jardin_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_garden_placeholder"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_image_background" />

        <!-- Adresse ou nom du jardin -->
        <TextView
            android:id="@+id/tv_jardin_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse du jardin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/iv_jardin_image"
            android:layout_marginStart="12dp"
            android:layout_alignTop="@id/iv_jardin_image" />

        <!-- Surface du jardin -->
        <TextView
            android:id="@+id/tv_jardin_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surface : 25 mÂ²"
            android:textSize="14sp"
            android:layout_below="@id/tv_jardin_address"
            android:layout_toEndOf="@id/iv_jardin_image"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
